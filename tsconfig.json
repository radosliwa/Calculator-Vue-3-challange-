{
    "compilerOptions": {
        "target": "ESNext",
        "module": "esnext",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "types": ["vite/client", "node", "vitest"],
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx", "shims-vue.d.ts"],
    "exclude": ["node_modules", "src/__tests__"]
}
